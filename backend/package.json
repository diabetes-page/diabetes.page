    "@types/express": "^4.17.8",
    "@types/node": "^14.11.2",
    "@types/superagent": "^4.1.10",
    "chai": "^4.2.0",
    "cucumber": "^6.0.5",
    "superagent": "^6.1.0",
    "ts-node": "^9.0.0"
  }
