{
  "name": "backend",
  "version": "0.0.1",
  "description": "The backend of diabetes.page. It exposes an API and works using nest.js.",
  "author": "RMR Digital Ventures",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "watch": "nest start --watch",
    "debug": "nest start --debug --watch",
    "prod": "node dist/main",
    "test": "ts-node scripts/run_tests.ts",
    "db:fresh": "typeorm schema:drop && typeorm migration:run",
    "db:seed": "nest start --config src/database/seeding/bootstrap/nest-cli.json",
    "db:freshseed": "npm run db:fresh && npm run db:seed",
    "db:gen": "typeorm migration:generate",
    "db:migrate": "typeorm migration:run",
    "docs": "node docs/generate_docs.js"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.4",
    "@nestjs/config": "^0.5.0",
