    "tweetnacl": "^1.0.3",
    "typeorm": "^0.2.26"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.2",
    "@nestjs/testing": "^7.4.4",
    "@types/chai": "^4.2.12",
    "@types/cucumber": "^6.0.1",
    "@types/express": "^4.17.8",
    "@types/faker": "^5.1.5",
    "@types/node": "^14.11.2",
    "@types/superagent": "^4.1.10",
